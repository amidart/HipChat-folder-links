{
  "manifest_version": 2,
  "name": "HipChat Folder Links",
  "description": "",
  "version": "0.9",

  "icons": {
    "16": "img/icon32.png",
    "48": "img/icon32.png",
    "128": "img/icon32.png"
  },

  "browser_action": {
    "default_icon": "img/icon32.png"
  },

  "background": {
    "scripts": ["js/background.js"],
    "permanent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.hipchat.com/*"],
      "js": [
        "js/content-script.js"
      ],
      "css": ["css/style.css"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "nativeMessaging"
  ]
}
